DB_BACKUP_PATH=backups/

# Business Information
BUSINESS_NAME=BuildSmart Hardware Store
BUSINESS_PHONE=077-1234567
BUSINESS_EMAIL=info@buildsmart.lk
BUSINESS_ADDRESS=123 Main Street, Ratnapura, Sri Lanka

# Feature Flags
